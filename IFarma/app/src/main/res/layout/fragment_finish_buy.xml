<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_height="55dp"
        android:layout_width="match_parent"
        android:background="@color/colorPrimary"
        android:layout_marginLeft="-30px">

        <android.support.design.widget.FloatingActionButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/back_btn"
            android:src="@drawable/ic_arrow_back_white_24dp"
            android:layout_gravity="center_vertical"
            app:rippleColor="@color/colorPrimaryDark"
            app:fabSize="mini"
            app:backgroundTint="@color/colorPrimary"
            app:elevation="0dp"
            app:borderWidth="0dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/buy_finish"
            android:textSize="20sp"
            android:textColor="@color/white"
            android:layout_gravity="center_vertical"/>

    </android.support.v7.widget.Toolbar>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/toolbar"
        android:id="@+id/relative_layout"
        android:layout_margin="20dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@android:color/black"
            android:text="@string/delivery_text"
            android:textSize="18sp"
            android:id="@+id/tv_delivery"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@android:color/black"
            android:text="{{ Price }}"
            android:textSize="18sp"
            android:id="@+id/delivery_price"
            android:layout_alignParentTop="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@android:color/black"
            android:text="Valor da compra: "
            android:textSize="18sp"
            android:layout_below="@id/tv_delivery"
            android:id="@+id/tv_medicines"
            android:layout_marginTop="25dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@android:color/black"
            android:text="{{ Price }}"
            android:textSize="18sp"
            android:id="@+id/medicines_price"
            android:layout_alignBaseline="@+id/tv_medicines"
            android:layout_marginBottom="5dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@android:color/black"
            android:text="Valor a pagar: "
            android:textSize="18sp"
            android:layout_below="@id/tv_medicines"
            android:id="@+id/tv_total"
            android:layout_marginTop="25dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@android:color/black"
            android:text="{{ Price }}"
            android:textSize="18sp"
            android:id="@+id/total_price"
            android:layout_alignBaseline="@+id/tv_total"
            android:layout_marginBottom="5dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"/>

        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="1"
            android:layout_below="@id/total_price"
            android:layout_marginTop="15dp"
            android:layout_alignLeft="@+id/total_price"
            android:layout_alignStart="@+id/total_price"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:id="@+id/textInputLayout">
            <EditText android:id="@+id/input_change"
                android:layout_marginLeft="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="numberDecimal"
                android:hint=" "
                android:textColor="#000"
                android:textSize="18sp" />
        </android.support.design.widget.TextInputLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@android:color/black"
            android:text="Troco para: "
            android:textSize="18sp"
            android:id="@+id/tv_change"
            android:layout_alignBottom="@+id/textInputLayout"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginBottom="11dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="R$"
            android:textSize="18sp"
            android:id="@+id/rs_change"
            android:textColor="@color/colorPrimaryDark"
            android:layout_alignBaseline="@+id/tv_change"
            android:layout_alignBottom="@+id/tv_change"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_marginRight="71dp"
            android:layout_marginEnd="71dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@android:color/black"
            android:text=""
            android:textSize="18sp"
            android:id="@+id/tv_address"
            android:layout_below="@+id/rs_change"
            android:layout_marginTop="40dp"
            android:layout_marginBottom="10dp"/>

        <android.support.v7.widget.AppCompatButton
            android:id="@+id/address_delivery"
            android:background="@drawable/rounded_button"
            android:backgroundTint="@android:color/holo_orange_dark"
            android:layout_below="@id/tv_address"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:layout_centerHorizontal="true"
            android:text="EndereÃ§o de Entrega" />

    </RelativeLayout>

    <android.support.v7.widget.AppCompatButton
        android:id="@+id/finish_buy"
        android:background="@drawable/rounded_button"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:text="Finalizar Compra"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true" />

</RelativeLayout>